@push('myscript')
<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.1.7/dist/signature_pad.umd.min.js"></script>
<script>
    $(document).ready(function() {
        // Preview Foto Identitas
        $('input[name="foto_identitas"]').change(function(e) {
            const file = e.target.files[0];
            if (file) {
                // Validasi ukuran file (max 2MB)
                if (file.size > 2 * 1024 * 1024) {
                    Swal.fire({
                        icon: 'error',
                        title: 'File Terlalu Besar!',
                        text: 'Ukuran file maksimal 2MB',
                        confirmButtonText: 'OK'
                    });
                    $(this).val('');
                    $('#preview_identitas').hide();
                    return;
                }

                // Validasi tipe file
                if (!file.type.match('image.*')) {
                    Swal.fire({
                        icon: 'error',
                        title: 'File Tidak Valid!',
                        text: 'Hanya file gambar yang diperbolehkan',
                        confirmButtonText: 'OK'
                    });
                    $(this).val('');
                    $('#preview_identitas').hide();
                    return;
                }

                // Preview gambar
                const reader = new FileReader();
                reader.onload = function(e) {
                    $('#preview_identitas').attr('src', e.target.result).show();
                };
                reader.readAsDataURL(file);
            }
        });

        // Initialize Signature Pad
        const canvas = document.getElementById('signature-pad');
        
        // Function to resize canvas properly
        function resizeCanvas() {
            const ratio = Math.max(window.devicePixelRatio || 1, 1);
            canvas.width = canvas.offsetWidth * ratio;
            canvas.height = canvas.offsetHeight * ratio;
            canvas.getContext("2d").scale(ratio, ratio);
            signaturePad.clear(); // Clear on resize to avoid artifacts
        }
        
        const signaturePad = new SignaturePad(canvas, {
            backgroundColor: 'rgb(255, 255, 255)',
            penColor: 'rgb(0, 0, 0)',
            minWidth: 1,
            maxWidth: 3
        });
        
        // Resize canvas on init
        resizeCanvas();
        
        // Resize canvas on window resize
        window.addEventListener('resize', resizeCanvas);

        // Clear button
        $('#btnClearSignature').click(function() {
            signaturePad.clear();
        });

        // Set minimum datetime untuk estimasi kembali
        $('input[name="waktu_pinjam"]').on('change', function() {
            const waktuPinjam = $(this).val();
            if (waktuPinjam) {
                $('input[name="estimasi_kembali"]').attr('min', waktuPinjam);
            }
        });

        // Trigger change on page load to set initial min
        $('input[name="waktu_pinjam"]').trigger('change');

        // Get GPS Location
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                var latitude = position.coords.latitude;
                var longitude = position.coords.longitude;
                
                $('#latitude_pinjam').val(latitude);
                $('#longitude_pinjam').val(longitude);
                $('#lokasi_display').val(latitude + ', ' + longitude);
                
                Swal.fire({
                    icon: 'success',
                    title: 'Lokasi Terdeteksi!',
                    text: 'GPS berhasil mendapatkan koordinat',
                    timer: 2000,
                    showConfirmButton: false
                });
            }, function(error) {
                $('#lokasi_display').val('GPS tidak dapat diakses');
            });
        }

        // Form Submit
        $('#formPeminjaman').submit(function(e) {
            e.preventDefault();

            if (signaturePad.isEmpty()) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Tanda Tangan Belum Diisi!',
                    text: 'Silakan tanda tangan terlebih dahulu',
                    confirmButtonText: 'OK'
                });
                return false;
            }

            // Validate estimasi kembali
            const waktuPinjam = new Date($('input[name="waktu_pinjam"]').val());
            const estimasiKembali = new Date($('input[name="estimasi_kembali"]').val());
            
            if (estimasiKembali <= waktuPinjam) {
                Swal.fire({
                    icon: 'error',
                    title: 'Waktu Tidak Valid!',
                    text: 'Estimasi waktu kembali harus lebih dari waktu pinjam',
                    confirmButtonText: 'OK'
                });
                return false;
            }

            // Save signature as base64
            const dataURL = signaturePad.toDataURL();
            $('#ttd_peminjam').val(dataURL);

            // Submit form
            this.submit();
        });
    });
</script>
@endpush
