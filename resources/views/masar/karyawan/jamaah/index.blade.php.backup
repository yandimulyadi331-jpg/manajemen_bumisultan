        .id-card-photo-container {
            position: relative;
            width: 190px;
            height: 190px;
            border-radius: 50%;
            border: 10px solid transparent;
            background: linear-gradient(#1a1c2e, #1a1c2e) padding-box,
                       linear-gradient(45deg, 
                           #FFD700 0%, 
                           #FFA500 20%, 
                           #FF69B4 40%, 
                           #8A2BE2 60%, 
                           #00CED1 80%, 
                           #FFD700 100%) border-box;
            background-size: 100% 100%, 200% 200%;
            animation: borderRotate 4s linear infinite;
            overflow: visible;
            box-shadow: 0 0 50px rgba(255, 215, 0, 0.6),
                       0 0 30px rgba(138, 43, 226, 0.5),
                       0 20px 60px rgba(0, 0, 0, 0.8),
                       inset 0 2px 4px rgba(255, 215, 0, 0.3),
                       0 0 0 4px rgba(138, 43, 226, 0.3),
                       0 0 0 8px rgba(255, 215, 0, 0.2);
            z-index: 10;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }
        
        @keyframes borderRotate {
            0%, 100% { background-position: 0% 0%, 0% 50%; }
            50% { background-position: 0% 0%, 100% 50%; }
        }
        
        .id-card-photo-container::before {
            content: '';
            position: absolute;
            inset: -15px;
            border-radius: 50%;
            background: radial-gradient(circle, 
                rgba(255, 215, 0, 0.4) 0%, 
                rgba(138, 43, 226, 0.3) 30%,
                transparent 70%);
            z-index: -1;
            animation: pulseRing 3s ease-in-out infinite;
        }
        
        @keyframes pulseRing {
            0%, 100% {
                transform: scale(1);
                opacity: 0.6;
            }
            50% {
                transform: scale(1.1);
                opacity: 1;
            }
        }

        .photo-expand-icon {
            position: absolute;
            bottom: 8px;
            right: 8px;
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #FFD700 0%, #FFA500 50%, #FF69B4 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.7),
                       0 3px 10px rgba(255, 165, 0, 0.5),
                       inset 0 2px 4px rgba(255, 255, 255, 0.4),
                       0 0 20px rgba(255, 215, 0, 0.6);
            opacity: 0;
            transform: scale(0.8);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 3px solid rgba(255, 255, 255, 0.8);
            z-index: 10;
            animation: iconPulse 2s ease-in-out infinite;
        }
        
        @keyframes iconPulse {
            0%, 100% {
                box-shadow: 0 6px 20px rgba(255, 215, 0, 0.7),
                           0 3px 10px rgba(255, 165, 0, 0.5),
                           inset 0 2px 4px rgba(255, 255, 255, 0.4),
                           0 0 20px rgba(255, 215, 0, 0.6);
            }
            50% {
                box-shadow: 0 8px 30px rgba(255, 215, 0, 0.9),
                           0 4px 15px rgba(255, 165, 0, 0.7),
                           inset 0 2px 4px rgba(255, 255, 255, 0.5),
                           0 0 30px rgba(255, 215, 0, 0.8);
            }
        }

        .photo-expand-icon ion-icon {
            color: white;
            font-size: 26px;
            filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.5));
            font-weight: bold;
        }

        .id-card-photo-container:hover .photo-expand-icon {
            opacity: 1;
            transform: scale(1.1) rotate(90deg);
        }

        .id-card-photo-container:hover {
            transform: scale(1.12);
            box-shadow: 0 0 70px rgba(255, 215, 0, 0.8),
                       0 0 40px rgba(138, 43, 226, 0.7),
